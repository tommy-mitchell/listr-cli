{
	"name": "listr-cli",
	"version": "0.2.0",
	"description": "Command-line task lists made pretty.",
	"keywords": [
		"cli",
		"cli-app",
		"listr",
		"listr2",
		"command line",
		"task",
		"test"
	],
	"license": "MIT",
	"repository": "tommy-mitchell/listr-cli",
	"author": {
		"name": "Tommy Mitchell",
		"url": "https://tommymitchell.io"
	},
	"type": "module",
	"bin": {
		"listr": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "tsc && chmodx --package",
		"postbuild": "replace-in-files dist/cli.js --string='#!/usr/bin/env tsx' --replacement='#!/usr/bin/env node'",
		"test": "xo && tsc --noEmit && c8 yarn ava:run",
		"ava:run": "NODE_OPTIONS='--loader=tsx --no-warnings=ExperimentalWarning' ava"
	},
	"dependencies": {
		"execa": "^7.1.1",
		"listr2": "^5.0.8",
		"meow": "^11.0.0"
	},
	"devDependencies": {
		"@johnowennixon/chmodx": "^1.1.0",
		"@tommy-mitchell/tsconfig": "^1.1.0",
		"@types/node": "^20.4.2",
		"ava": "^5.3.1",
		"c8": "^8.0.0",
		"get-bin-path": "^10.0.0",
		"is-executable": "^2.0.1",
		"replace-in-files-cli": "^2.2.0",
		"tsx": "^3.12.7",
		"typescript": "~5.1.6",
		"xo": "^0.54.2"
	},
	"ava": {
		"files": [
			"test/*.ts"
		],
		"extensions": {
			"ts": "module"
		},
		"timeout": "1m"
	}
}
